<%- include ('partials/header.ejs') %>
<body>
  <%- include ('partials/navbar.ejs') %>
  <div class="container">
    <h1 class="titulo">Perguntas frequentes</h1>
    <p>
      Antes de adicionar uma nova pergunta, verifique se sua dúvida já não foi
      respondida.
    </p>
    <hr />
    <% perguntas_view.forEach(pergunta => { %>
    <br />
    <div class="card">
      <div class="card-body">
        <h3><%= pergunta.titulo_banco %></h3>
      </div>
      <div class="card-footer">
        <a href="/detalhes/<%= pergunta.id %>" class="btn btn-default"
          >Ver respostas</a
        >
      </div>
    </div>
    <% }) %>
    <p id="linha">Não encontrou o que estava procurando?</p>
    <a href="/fazer_pergunta" class="btn btn-primary" id="enviar_pergunta"
      >Faça uma pergunta</a
    >
    <hr />
  </div>
</body>
<%- include ('partials/footer.ejs') %>
